{
  "name": "apollo-server-beta",
  "version": "0.0.1",
  "author": "Rodrigo Oler <roodrigoprogrammer@gmail.com>",
  "dependencies": {
    "apollo-server": "2.0.0-beta.7",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2"
  },
  "devDependencies": {
    "lint-staged": "7.2.0",
    "nodemon": "1.17.5",
    "xo": "0.21.1"
  },
  "lint-staged": {
    "*.js": [
      "npm run prettier",
      "npm run xo:fix",
      "npm run xo",
      "git add"
    ]
  },
  "scripts": {
    "dev": "nodemon src/index",
    "start": "node src/index",
    "xo": "node_modules/.bin/xo",
    "xo:fix": "node_modules/.bin/xo --fix"
  }
}
